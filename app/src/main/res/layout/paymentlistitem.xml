<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
   android:layout_marginStart="7dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="7dp">

    <RelativeLayout
        style="android:listS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="27dp"

       >


        <TextView
            android:id="@+id/BName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"


            />

        <TextView
            android:id="@+id/BName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text=""
            android:textSize="25sp"
            android:background="@color/colorWhite"
            android:layout_marginLeft="50dp"
            />



        <TextView
            android:id="@+id/BNotes1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Notes"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:id="@+id/BNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="120dp"

            android:textSize="25sp"
            android:background="@color/colorWhite"
            android:layout_marginLeft="100dp" />




        <TextView
            android:id="@+id/BPayemntMenthod1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="P.Method"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/BPayemntMenthod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120sp"
            android:layout_marginTop="80dp"
            android:background="@color/colorWhite"
            android:textSize="25sp"
            android:layout_marginLeft="200sp" />



        <TextView
            android:id="@+id/BAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Address"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/BAddress"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="120dp"
            android:text=""
            android:background="@color/colorWhite"
            android:textSize="25sp"
            android:layout_marginLeft="100dp" />

        <TextView
            android:id="@+id/BPhone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Phone"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/BPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            android:layout_marginStart="120dp"
            android:text=""
            android:background="@color/colorWhite"
            android:textSize="25sp"
            android:layout_marginLeft="100dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>